<Window x:Class="FlaUI.NeoFlow.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="FlaUI.NeoFlow.TestApp"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left">
            <StackPanel.Resources>
                <Style x:Key="ButtonStyle"
                       TargetType="Button">
                    <Setter Property="Margin" Value="5" />
                </Style>
            </StackPanel.Resources>
            <Border Padding="8"
                    Background="LightGray"
                    BorderThickness="0,0,1,0"
                    DockPanel.Dock="Top">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="Views" />
            </Border>
            <Button Uid="ButtonsButtonUid"
                    Click="ButtonOnClick"
                    Content="Button"
                    Style="{StaticResource ButtonStyle}" />
            <Button Uid="CheckboxesButtonViewUid"
                    Click="CheckboxOnClick"
                    Content="Checkbox"
                    Style="{StaticResource ButtonStyle}" />
            <Button Uid="TextsButtonUid"
                    Click="TextOnClick"
                    Content="Text"
                    Style="{StaticResource ButtonStyle}" />
        </StackPanel>
        <Border Padding="8"
                Background="LightGray"
                DockPanel.Dock="Top">
            <TextBlock x:Name="ViewNameTextBox"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
        </Border>
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>
